@using WorkManagement.Domain.Models.Email
@model LeaveEmailModel 

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Pending Request Notification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        .container {
            margin: 20px;
        }

        .header {
            background-color: #f8f8f8;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .content {
            margin-top: 20px;
        }

        .footer {
            margin-top: 20px;
            font-size: 0.9em;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Pending Request Notification</h1>
        </div>
        <div class="content">
            <p>Dear @Model.ManagerName,</p>
            <p>This is to inform you that the following request is pending your approval:</p>
            <ul>
                <li><strong>Request Type:</strong> @Model.RequestType</li>
                <li><strong>Employee Name:</strong> @Model.EmployeeName</li>
                <li><strong>Start Date:</strong> @Model.StartDate.ToString("MMMM dd, yyyy")</li>
                <li><strong>End Date:</strong> @Model.EndDate.ToString("MMMM dd, yyyy")</li>
                <li><strong>Total Days:</strong> @Model.TotalDays</li>
                <li><strong>Reason:</strong> @Model.Reason</li>
            </ul>
            <p>Please review and take the necessary action at your earliest convenience.</p>
            <p>Thank you for your prompt attention to this matter.</p>
        </div>
        <div class="footer">
            <p>Best regards,</p>
            <p>@Model.EmployeeName</p>
        </div>
    </div>
</body>
</html>

